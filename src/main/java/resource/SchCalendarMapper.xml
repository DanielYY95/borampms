<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="mvc.dao.SchCalendarDao">
	<!-- 
	List<Calendar> getCalendarList();
	 -->
	<resultMap type="calendar" id="calResult">
		<result property="cd_start" column="cd_start"/>
		<result property="cd_end" column="cd_end"/>
	</resultMap> 
	<select id="getCalendarList" resultMap="calResult">
		select * from calendar
	</select>
	<insert id="insertCalendar" parameterType="calendar">
		INSERT INTO calendar values(cal_seq.nextval, 
			#{cd_title},#{cd_start},#{cd_end},#{cd_content},#{cd_borderColor},#{cd_backgrColor},
				#{cd_textColor},
				#{cd_allDay})
	</insert> 
	<update id="updateCalendar"  parameterType="calendar">
		UPDATE calendar
			set cd_title = #{cd_title},
			    cd_start = #{cd_start},
			    cd_end = #{cd_end},
			    cd_content = #{cd_content},
			    cd_bordercolor = #{cd_borderColor},
			    cd_backgrcolor = #{cd_backgrColor},
			    cd_textcolor = #{cd_textColor},
			    cd_allDay = #{cd_allDay}
		WHERE cd_id = #{cd_id}		    
	</update>
	<delete id="deleteCalendar" parameterType="int">
		DELETE FROM calendar
			WHERE cd_id = #{cd_id}
	</delete>
</mapper>